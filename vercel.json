{
  "version": 2,
  "name": "telegram-music-bot",
  "public": false,
  "regions": ["iad1"],
  "functions": {
    "api/bot.py": {
      "memory": 3008,
      "maxDuration": 300,
      "runtime": "python3.10"
    },
    "api/health.py": {
      "memory": 128,
      "maxDuration": 10
    },
    "api/webhook.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/api/health.py",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "/api/health.py",
      "methods": ["GET"]
    },
    {
      "src": "/webhook",
      "dest": "/api/webhook.py",
      "methods": ["POST"]
    },
    {
      "src": "/bot",
      "dest": "/api/bot.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/start",
      "dest": "/api/bot.py",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/api/health.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.10.0",
    "NODE_VERSION": "18.x"
  },
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.10.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
